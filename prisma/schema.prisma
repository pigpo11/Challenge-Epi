generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id             String          @id @default(uuid())
  nickname       String          @unique
  gender         String?
  height         Float?
  weight         Float?
  age            Int?
  activity       Float?
  deficit        Int?
  track          String?
  points         Int             @default(0)
  password       String?         // 6-digit password
  bmr            Float?
  targetCalories Float?
  profileImage   String?
  status         String?         @default("오늘도 건강하게!")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  certifications Certification[]
  comments       Comment[]
  inbodyRecords  InBodyRecord[]
  posts          Post[]
}

model InBodyRecord {
  id        String   @id @default(uuid())
  profileId String
  weight    Float
  muscle    Float
  fat       Float
  date      String
  day       String
  createdAt DateTime @default(now())
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Certification {
  id            String   @id @default(uuid())
  profileId     String
  type          String
  imageUrl      String
  pointsAwarded Int      @default(10)
  createdAt     DateTime @default(now())
  profile       Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Post {
  id        String    @id @default(uuid())
  profileId String
  type      String
  image     String
  likes     Int       @default(0)
  createdAt DateTime  @default(now())
  comments  Comment[]
  profile   Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Comment {
  id        String   @id @default(uuid())
  postId    String
  profileId String
  text      String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}
